---
version: "3.9"

services:

  homeassistant:
    container_name: homeassistant
    hostname: homeassistant
    image: homeassistant/home-assistant:{{ homeassistant_version }}
    restart: always
    ports:
      - {{ homeassistant_port }}:8123
    networks:
      - frontend
    volumes: 
      - /home/{{ homeassistant_exec_user }}/homeassistant/data:/config
    environment:
      TZ: Europe/Berlin # The timezone. 
      
networks: # The presence of these objects is sufficient to define them
  frontend: {}
